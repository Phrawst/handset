{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",               // Specify the output directory for compiled files
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"                    // Specify the paths to include in compilation
  ],
  "exclude": [
    "node_modules"                   // Specify the paths to exclude from compilation
  ]
}